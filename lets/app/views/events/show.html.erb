<% provide(:title, @event.name) %>
<h3><%= @event.name %></h3>
<h4><%= link_to @event.producer.fantasy_name, @event.producer %></h4>
<p class="card"><%= @event.description %>
	capacity: <%= @event.capacity %> |
	ages: <%= @event.min_age %> to
	<%= @event.max_age %> |
	opens: <%= @event.open_date.strftime("%m/%d/%y %I:%M%p") %> |
	closes: <%= @event.close_date.strftime("%m/%d/%y %I:%M%p") %>
</p>

<h4>Combos</h4>
<ul>
	<%= render @event.combos %>
</ul>

<% if is_owner?(@event.producer) %>
	<p><%= link_to "New Combo", new_event_combo_path(@event), class: 'btn btn-primary' %></p>
  <%= link_to "Edit", edit_event_path(@event) %> | 
  <%= link_to "Delete", @event, method: :delete,
                                data: { confirm: "You sure?" } %>
<% end %>
