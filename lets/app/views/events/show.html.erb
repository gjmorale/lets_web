<% provide(:title, @event.name) %>
<h1><%= @event.name %></h1>
<h2><%= link_to @event.producer.fantasy_name, @event.producer %></h2>
<p><%= @event.description %></p>
<p>
	capacity: <%= @event.capacity %> |
	min age: <%= @event.min_age %> |
	max age: <%= @event.max_age %> |
	opens: <%= @event.open_date %> |
	closes: <%= @event.close_date %>
</p>

<ul>
	<%= render @event.combos %>
</ul>

<% if is_owner?(@event.producer) %>
	<p><%= link_to "New Combo", new_event_combo_path(@event) %></p>
  <%= link_to "Edit", edit_event_path(@event) %> | 
  <%= link_to "Delete", @event, method: :delete,
                                data: { confirm: "You sure?" } %>
<% end %>
<p>Find me in app/views/events/show.html.erb</p>
