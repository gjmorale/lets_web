<% provide :title, "Sign Up"%>
<h1>Accounts#new</h1>
<%= form_for(@account) do |f| %>
	<%= render 'shared/error_messages' %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Create", class: "" %>
<% end %>
